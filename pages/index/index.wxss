/**index.wxss**/
.index-page {
    background-color: #f0f0f0;
}

.userinfo {
    height: 46px;
    display: flex;
    align-items: center;
    color: rgba(0,0,0,0.45);
    padding: 0 24px;
}

.userinfo-avatar {
    height: 40px;
    width: 40px;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 10px;
}

.index-container{
    margin-top: 30vh;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
}

.lottie-box{
    height: calc(min(80vw, 50vh))
}

.canvas{
    width: calc(min(80vw, 50vh));
    height: calc(min(80vw, 50vh));
}

.loading-text{
    width: 100%;
    font-size: 14px;
    color: rgba(0,0,0,0.85);
    margin-top: 10px;
    text-align: center;
}
